<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/border_bottom"
    android:layout_width="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:id="@+id/schedule_time"
            android:text="10:15 - 11:55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/colorAccent"
            android:layout_marginRight="10dp"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:id="@+id/schedule_section"
            android:text="44 d "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/schedule_course_name"
        android:text="Data Steucture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/schedule_department"
        android:text="Department of cse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/schedule_room_no"
        android:text="Room no : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_gravity="right"
        android:id="@+id/schedule_toggle"
        android:textColor="@color/green"
        android:layout_marginRight="10dp"
        android:text="@string/turn_of_this_schedule_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>