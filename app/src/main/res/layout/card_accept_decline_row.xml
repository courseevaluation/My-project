<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:outlineSpotShadowColor="@color/Red"
    android:outlineAmbientShadowColor="@color/Red"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.course_evaluation.customcomponent.CircleImageView
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="5dp"
            android:layout_alignParentStart="true"
            android:id="@+id/pending_row_pp"
            android:src="@drawable/sample_pp"
            android:layout_width="55dp"
            android:layout_height="55dp"/>
        <TextView
            android:singleLine="true"
            android:layout_marginLeft="80dp"
            android:id="@+id/pending_row_name"
            android:layout_toLeftOf="@id/pending_row_accept"
            android:layout_marginRight="5dp"
            android:focusable="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:text="Ariful Jannat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/pending_row_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pending_row_name"
            android:layout_alignLeft="@+id/pending_row_name"
            android:layout_alignRight="@id/pending_row_name"
            android:layout_marginTop="0dp"
            android:text="1712020177" />
        <Button
            android:layout_marginTop="10dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="3dp"
            android:id="@+id/pending_row_accept"
            android:layout_toLeftOf="@id/pending_row_decline"
            android:textColor="@color/White"
            android:background="@color/green"
            android:text="@string/txt_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:id="@+id/pending_row_decline"
            android:layout_alignParentRight="true"
            android:textColor="@color/green"
            android:gravity="center"
            android:drawableRight="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>