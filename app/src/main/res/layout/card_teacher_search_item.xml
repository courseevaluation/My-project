<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_centerVertical="true"
        android:layout_alignStart="@id/card_peaple_image"
        android:layout_marginLeft="50dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/main_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardElevation="4dp">
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:layout_marginLeft="75dp"
                android:id="@+id/card_peaple_name"
                android:text="Ataul Goni Usmani"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="3dp"
                android:layout_alignStart="@id/card_peaple_name"
                android:text="Department of CSE"
                android:layout_below="@id/card_peaple_name"
                android:id="@+id/card_peaple_designation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="2dp"
                android:layout_marginTop="3dp"
                android:layout_alignStart="@id/card_peaple_name"
                android:text="Assistant Professor"
                android:layout_below="@id/card_peaple_designation"
                android:id="@+id/card_peaple_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

