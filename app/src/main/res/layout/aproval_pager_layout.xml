<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <Button
       android:layout_marginRight="10dp"
       android:layout_marginTop="5dp"
       android:padding="4dp"
       android:background="@color/Green"
       android:minHeight="0dp"
       android:minWidth="0dp"
       android:layout_alignParentRight="true"
       android:textColor="@color/White"
       android:text="Approve all"
       android:id="@+id/approval_page_approve_all"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
   <Button
       android:layout_marginBottom="5dp"
       android:padding="4dp"
       android:background="@color/Red"
       android:layout_margin="5dp"
       android:minHeight="0dp"
       android:minWidth="0dp"
       android:layout_toLeftOf="@id/approval_page_approve_all"
       android:textColor="@color/White"
       android:text="Decline all"
       android:id="@+id/approval_page_decline_all"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
   <android.support.v7.widget.RecyclerView
       android:layout_marginTop="5dp"
       android:layout_below="@id/approval_page_approve_all"
       android:id="@+id/recyclerview_aproval_page"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

</RelativeLayout>