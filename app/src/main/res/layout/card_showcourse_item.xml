<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Theme.AppCompat.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <com.example.course_evaluation.customcomponent.CircleImageView
            android:id="@+id/cc_course_image"
            android:src="@drawable/sample_pp2"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <TextView
            android:textColor="@color/green"
            android:id="@+id/cc_course_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="on" />
        <TextView
            android:id="@+id/cc_course_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/cc_course_status"
            android:gravity="center"
            android:padding="5dp"
            android:text="CSE-3311"
            android:textSize="23sp" />
        <TextView
            android:id="@+id/cc_course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cc_course_code"
            android:gravity="center"
            android:text="Data Communication"
            android:textSize="18sp" />
        <LinearLayout
            android:id="@+id/ccdum3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cc_course_name"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/ccdum1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:text="BY :" />
            <TextView
                android:id="@+id/cc_course_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:paddingLeft="7dp"
                android:text="Selina Sharmin Chowshury"
                android:textSize="18sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:id="@+id/ccdum2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ccdum3">
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/d1"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batch : " />
            <TextView
                android:layout_toRightOf="@id/d1"
                android:id="@+id/cc_course_batch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="44th" />
            <TextView
                android:layout_toLeftOf="@id/cc_course_sections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Section : " />

            <TextView
                android:layout_alignParentEnd="true"
                android:gravity="right"
                android:id="@+id/cc_course_sections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A,B,C,D" />
        </RelativeLayout>

        <TextView
            android:id="@+id/cc_course_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ccdum2"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:text="!2/05/2019" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cc_course_create_time"
            android:layout_toLeftOf="@id/cc_course_create_time"
            android:text="created on: " />

    </RelativeLayout>
</LinearLayout>