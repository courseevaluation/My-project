<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="mydarktheme" parent="Theme.AppCompat.NoActionBar">
    </style>
    <style name="mydarktheme_fullscreen" parent="Theme.AppCompat.NoActionBar">
    </style>
    <style name="mylighttheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>
    <style name="mylighttheme_fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
    </style>
    <style name="mytheme_violet" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/White</item>
        <item name="android:background">@color/nav_menu_background</item>
        <item name="colorBackgroundFloating">@color/nav_menu_background</item>
    </style>
    <declare-styleable name="CircleImageView">
        <attr name="strokeColor" format="color"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="highlightEnable" format="boolean"/>
        <attr name="highlightColor" format="color"/>
    </declare-styleable>
    <style name="Createcoursedialog" parent="AppTheme" >
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.WindowSlideUpDown</item>
    </style>
    <style name="Animation.WindowSlideUpDown" parent="@android:style/Animation.Activity" >
        <item name="android:windowEnterAnimation">@anim/top_to_down</item>
        <item name="android:windowExitAnimation">@anim/down_to_top</item>
    </style>



</resources>
